<% if @seed.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@seed.errors.count, "error") %>
      prohibited this seed from being saved:
    </h2>
 
    <ul>
    <% @seed.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @seed do |f|%>
    
<%=f.label :name%>
<%=f.text_field :name%>
<br>
<br>
<%= f.label :category%>
<%= f.select :category, ['Vegetable', 'Fruit', 'Herb', 'Flower']%>
<br>
<br>
<%=f.label :description%>
<%= f.text_area :description%>
<%# f.hidden_field :seed_id%>
<%=f.submit "Submit"%>

<%end%>